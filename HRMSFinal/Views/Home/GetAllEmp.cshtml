@model IEnumerable<HRMSFinal.Models.EmployeeVM>
@{
    ViewData["Title"] = "GetAllEmp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetAllEmp</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpId)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpSalary)
            </th>
            <th></th>

        </tr>
    </thead>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.EmpId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EmpName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EmpSalary)
    </td>

    <td>
        <a asp-action="Edit" asp-route-EmpId="@item.EmpId">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.EmpId">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.EmpId">Delete</a>
    </td>
</tr>
    }
</table>
